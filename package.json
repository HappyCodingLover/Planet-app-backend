{
  "name": "backend-typescript-pern-stack",
  "version": "1.0.0",
  "description": "Backend TypeScript PERN Stack",
  "main": "build/src/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p . & cp -r ./src/views ./build/src",
    "start": "ts-node -r tsconfig-paths/register ./build/src/index.js",
    "lint": "eslint . --ext .ts",
    "migration:create": "cross-env NODE_ENV=local npm run typeorm -- migration:create -n",
    "setup": "npm run typeorm -- migration:run",
    "setup:local": "cross-env NODE_ENV=local npm run typeorm -- migration:run",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "lint:fix": "eslint --fix . --ext .ts"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@types/passport-steam": "^1.0.1",
    "@xboxreplay/xboxlive-auth": "^3.3.3",
    "axios": "^0.21.1",
    "bcrypt": "5.0.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cross-env": "^7.0.3",
    "discord.js": "^12.5.3",
    "dotenv-safe": "8.2.0",
    "ejs": "^3.1.6",
    "ejs-locals": "^1.0.2",
    "express": "4.17.1",
    "express-joi-validation": "4.0.4-beta.0",
    "express-promise-router": "4.0.1",
    "generate-password": "^1.6.0",
    "google-auth-library": "^7.1.2",
    "helmet": "4.1.0",
    "http-status": "1.4.2",
    "morgan": "1.10.0",
    "node-statsd": "^0.1.1",
    "passport": "0.4.1",
    "passport-discord": "^0.1.4",
    "passport-jwt": "4.0.0",
    "passport-steam": "^1.0.15",
    "pg": "^8.3.3",
    "pxs-psn-api": "^2.0.0",
    "queue-microtask": "^1.2.3",
    "reflect-metadata": "0.1.13",
    "request": "^2.88.2",
    "request-ip": "^2.1.3",
    "response-time": "^2.3.2",
    "side-channel": "^1.0.4",
    "typeorm": "0.2.25",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.7",
    "@types/dotenv-safe": "8.1.1",
    "@types/express": "4.17.8",
    "@types/express-promise-router": "3.0.0",
    "@types/faker": "4.1.12",
    "@types/hapi__joi": "17.1.4",
    "@types/helmet": "0.0.48",
    "@types/http-status": "1.1.2",
    "@types/jest": "26.0.13",
    "@types/logform": "1.10.1",
    "@types/morgan": "1.9.1",
    "@types/node": "14.6.4",
    "@types/passport": "1.0.4",
    "@types/passport-jwt": "3.0.3",
    "@types/supertest": "2.0.10",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "5.1.0",
    "jest": "26.4.2",
    "logform": "2.2.0",
    "nodemon": "2.0.4",
    "prettier": "^2.3.2",
    "supertest": "4.0.2",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.2"
  }
